                <label for="jumlahKita">Jumlah Minyak Kita Pouch 2L (Karton):</label>
                <input type="number" id="jumlahKita" name="jumlahKita" value="0" min="0">
            </div>

            <button type="button" onclick="hitungTotal()">Hitung Total Harga</button>
            <div id="totalHarga"></div>
