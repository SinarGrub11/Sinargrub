    <script>
        function hitungTotal() {
            const hargaFilma = 205000;
            const hargaKita = 192000;
            const jumlahFilma = parseInt(document.getElementById('jumlahFilma').value) || 0;
            const jumlahKita = parseInt(document.getElementById('jumlahKita').value) || 0;

            const total = (hargaFilma * jumlahFilma) + (hargaKita * jumlahKita);
            document.getElementById('totalHarga').innerText = 'Total Harga: Rp ' + total.toLocaleString();
        }
    </script>
